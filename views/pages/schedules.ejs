<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/header'); -%>
</head>

<body class="hm-gradient bg-body">
    <!--/.Navbar -->
    <%- include('../includes/nav'); -%>
    <!--/.Navbar -->
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12 pt-5 pb-5">
                <h1>Welcome to our schedule website</h1>
            </div>
            <div class="col-lg-12 pt-1 pb-3">
                <div class="row">
                <div class="col-lg-6">
                    <h2>Explore schedules</h2>
                </div>
                <div class="col-lg-6">
                    <div class="float-right">
                    <a type="button" href="/schedule/new" class="btn btn-primary btn-lg">Add Schedule</a>
                    </div>
                </div>
            </div>
            </div>
            <div class="col-lg-12">
                <table class="table">
                    <thead class="thead text-light bg-primary">
                        <tr>
                            <th scope="col">User id</th>
                            <th scope="col">Day</th>
                            <th scope="col">Start at</th>
                            <th scope="col">End at</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 0; i < schedules.length; i++) { %>
                        <tr>
                            <th scope="row"><%= schedules[i].user_id %></th>
                            <td><%= schedules[i].day %></td>
                            <td><%= schedules[i].start_at %></td>
                            <td><%= schedules[i].end_at %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <%- include('../includes/footer'); -%>
    <%- include('../includes/footer-js'); -%>
</body>

</html>