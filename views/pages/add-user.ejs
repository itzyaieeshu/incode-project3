<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/header'); -%>
</head>

<body class="hm-gradient bg-body">
    <!--/.Navbar -->
    <%- include('../includes/nav'); -%>
        <!--/.Navbar -->
        <!-- Page Content -->
        <div class="container">
            <div class="row justify-content-center pb-5">
                <div class="col-lg-12 pt-5 pb-5">
                    <h1>Welcome to our schedule website</h1>
                </div>
                <div class="col-lg-6 pb-5">
                <form method="POST" action="/user/add" novalidate>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="fname">First Name</label>
                                <input type="text" class="form-control" id="fname"  name="firstname" placeholder="First name">
                                <p class="error-text" id="firstNameMessage">Enter valid first name</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="lname">Last Name</label>
                                <input type="text" class="form-control" id="lname"  name="lastname" placeholder="Last name">
                                <p class="error-text" id="lastNameMessage">Enter valid last name</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" name="email"
                            placeholder="name@example.com">
                        <p class="error-text" id="emailMessage">Enter valid email address</p>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="password">
                        <div class="error-text password-meter-shell text-center"><div class="password-meter" id="passwordMeter"></div></div>
                    </div>
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary btn-lg" id="submit-user">Add User</button>
                    </div>
                </form>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
        <%- include('../includes/footer'); -%>
            <%- include('../includes/footer-js'); -%>
</body>

</html>